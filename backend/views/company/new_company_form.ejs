<div class="container-fluid p-4">
  <div class="dashboard-forms-companies">
      <h2>
          Registar nova empresa
          <i class="fas fa-building ml-2 fa-1x"></i>
      </h2>
      <form class="border shadow-sm" action="/dashboard/company/new" method="POST">
          <div class="form-group col-lg-12">
              <label for="name">Nome da empresa</label>
              <input
                  type="text" 
                  name="name"
                  class="form-control" 
                  aria-describedby="name" 
                  placeholder="Nome da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="name">Nome de utilizador</label>
              <input
                  type="text" 
                  name="username"
                  class="form-control" 
                  aria-describedby="name" 
                  placeholder="Nome da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="companyAddress">Localização da empresa</label>
              <input
                  type="text" 
                  name="companyAddress"
                  class="form-control" 
                  aria-describedby="companyAddress" 
                  placeholder="Localização da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="companyAddress">Contacto da empresa</label>
              <input
                  type="number" 
                  name="companyTelephone"
                  class="form-control" 
                  aria-describedby="companyTelephone" 
                  placeholder="Contacto da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="name">Cartão de Cidadão</label>
              <input
                  type="text" 
                  name="companyCC"
                  class="form-control" 
                  aria-describedby="name" 
                  placeholder="Nome da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="companyAddress">Endereço eletrónico da empresa</label>
              <input
                  type="tel" 
                  name="companyEmail"
                  class="form-control" 
                  aria-describedby="companyEmail" 
                  placeholder="Endereço eletrónico da empresa" required>
          </div>
          <div class="form-group col-lg-12">
              <label for="name">Password para a entidade</label>
              <input
                  type="password" 
                  name="password"
                  class="form-control" 
                  aria-describedby="name" 
                  placeholder="Nome da empresa" required>
          </div>
          <button type="submit" class="btn-form btn btn-block shadow-sm mt-4">Registar</button>
      </form>
  </div>
</div>
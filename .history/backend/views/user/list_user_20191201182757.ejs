<div class="container-fluid p-4">
  <div class="table-responsive-lg">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Nome de utilizador</th>
        <th>E-mail</th>
        <th>Cartão de cidadão</th>
        <th>Data de criação</th>
        <th>Data da ultima atualização</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody>
        <% data.forEach(elem => { %>
          <tr>
            <th scope="row"><%- elem.pk_uuid %></th>
            <td><%- elem.fullname %></td>
            <td><%- elem.nickname %></td>
            <td><%- elem.email %></td>
            <td><%- elem.citizencard %></td>
            <td><%- elem.created_at %></td>
            <td><%- elem.update_at %></td>
            <td>
              <button class="btn btn-light" data-toggle="tooltip" 
              data-placement="bottom" title="Editar">
                  <i class="fas fa-edit"></i>
              </button>
              <% if(userLogged.pk_uuid != elem.pk_uuid) { %>
                <button class="btn btn-danger" data-toggle="tooltip"  data-toggle="modal" data-target="#modalDeleteDialog"
                data-placement="bottom" title="Apagar">
                    <i class="fas fa-trash"></i>
                </button>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>


<!-- Modals  -->

<!-- Delete dialog  -->

<button type="button" class="btn btn-primary" >
  Launch demo modal
</button>

<div class="modal fade" id="modalDeleteDialog" tabindex="-1" role="dialog" aria-labelledby="modalDeleteDialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
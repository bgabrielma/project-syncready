<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 d-flex justify-content-center">
                <div class="row text-center title">
                    <div class="col-md-12">
                            <img src="/images/logo-syncready-vector-shadow.png" alt="SyncReady logo" class="img-fluid">
                            <p class="h1">SyncReady</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-8">
                <form class="login-form shadow" method="POST" action="/validateRegister">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Holy guacamole!</strong> Veja os erros abaixo
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group col-lg-12">
                        <label class="" for="exampleInputName1">Nome completo</label>
                        <input type="text" class="form-control" name="fullname" aria-describedby="emailHelp" placeholder="Nome completo">
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="exampleInputEmail1">E-mail</label>
                        <input type="email" class="form-control" name="email" placeholder="E-mail">
                    </div>
                    <div class="form-group col-lg-9">
                        <label for="exampleInputTel1">Telemóvel</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                              <select id="disabledSelect" class="form-control input-group-text">
                                <option>+351</option>
                              </select>
                            </div>
                            <input type="tel" class="form-control" name="contacto" placeholder="Telemóvel">
                        </div> 
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="exampleInputCC1">Cartão de cidadão</label>
                        <input type="text" class="form-control" name="cc" placeholder="Cartão de cidadão">
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="exampleInputUsername1">Nome de utilizador</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="inputGroupPrepend">@</span>
                            </div>
                        <input type="text" class="form-control" name="username" placeholder="Nome de utilizador">
                    </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="exampleInputPassword1">Palavra-passe</label>
                        <input type="password" class="form-control" name="password" placeholder="Palavra-passe">
                    </div>
                    <div class="form-group col-lg-12">
                        <label for="exampleInputConfirm1">Confirmar palavra-passe</label>
                        <input type="password" class="form-control" name="repeatpassword" placeholder="Confirmar palavra-passe">
                    </div>
                    <button type="submit" class="btn-registar btn btn-block shadow-sm mt-4">Registar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% page -%>

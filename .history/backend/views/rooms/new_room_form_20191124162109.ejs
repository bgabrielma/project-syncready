<div class="container-fluid p-4">
    <form>
        <div class="form-group">
            <label for="nameRoom">Nome da sala</label>
            <input type="text" class="form-control" name="nameRoom" placeholder="Nome da sala">
        </div>
        <div class="form-group">
            <label for="roomCode">Identificador da sala</label>
            <input type="text" class="form-control" name="roomCode" value="<%- payload.token %>">
        </div>
        <div class="form-group">
                <label for="exampleInputTel1">Telemóvel</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <select id="disabledSelect" class="form-control input-group-text">
                        <option>+351</option>
                      </select>
                    </div>
                    <input 
                        type="tel" 
                        class="form-control" 
                        name="contacto" 
                        placeholder="Telemóvel">
                </div> 
            </div>
        <div class="form-group">
                <label for="exampleInputCC">Cartão de cidadão</label>
                <input type="text" class="form-control" id="exampleInputCC" placeholder="Cartão de cidadão">
        </div>
        <div class="form-group">
                <label for="exampleInputCC">Tipo de utilizador</label>
                <select class="custom-select">
                    <option selected>Selecione o tipo de utilizador</option>
                    <option value="1">Cliente</option>
                    <option value="2">Técnico</option>
                    <option value="3">Administrador</option>
                </select>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
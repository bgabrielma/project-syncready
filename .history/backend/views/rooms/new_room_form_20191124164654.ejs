<div class="container-fluid p-4">
    <form>
        <div class="form-group">
            <label for="nameRoom">Nome da sala</label>
            <input type="text" class="form-control" name="nameRoom" placeholder="Nome da sala">
        </div>
        <div class="form-group">
            <label for="roomCode">Identificador da sala</label>
            <input type="text" class="form-control" name="roomCode" value="<%- payload.token %>" readonly>
        </div>
        <div class="form-group">
            <label for="datasheet">Ficha de dados</label>
            <select class="selectpicker show-tick form-control" data-live-search="true">
                <option>Bruno Martins</option>
                <option>Guilherme Rodrigues</option>
                <option>Jorge</option><optgroup label="_________">
                        <option>Second</option>
                        <option>Third</option>
                    </optgroup>
            </select>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
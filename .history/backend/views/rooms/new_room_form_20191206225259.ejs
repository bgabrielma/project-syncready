<div class="container-fluid p-4">
    <div class="dashboard-forms-rooms">
        <h2>
                Registar nova sala 
                <i class="fas fa-comments ml-2 fa-1x"></i>
        </h2>
        <form class="border shadow-sm">
            <div class="form-group">
                <label for="nameRoom">Nome da sala</label>
                <input type="text" class="form-control" name="nameRoom" placeholder="Nome da sala">
            </div>
            <div class="form-group">
                <label for="description">Descrição da sala</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Descrição da sala"></textarea>
            </div>
            <div class="form-group">
                <label for="roomCode">Identificador da sala</label>
                <input type="text" class="form-control" name="roomCode" value="<%- data.token %>" readonly>
            </div>
            <div class="form-group">
                <label for="datasheet">Ficha de dados</label>
                <select name="datasheet" class="selectpicker show-tick form-control border" data-live-search="true">>
                    <optgroup label="Fichas técnicas inseridas">
                        <option>pc_virus_de_conteudo_indecente_ASUSXL3.pdf</option>
                        <option>placa_rede_toda_marada_NoNotion.pdf</option>
                        <option>32352612_BrunoGabrielNunesMartins_Caso012523.pdf</option>
                    </optgroup>
                    <optgroup label="Legumes nunca descobertos">
                        <option>Pesquisa por babolas</option>
                        <option>Pesquisa por cetatas</option>
                        <option>Pesquisa por cenoiras</option>
                    </optgroup>
                </select>
            </div><div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                  </div>
            <div class="form-group">
                <label for="members">Membros do grupo</label>
                <select name="members" class="selectpicker show-tick form-control border" data-live-search="true" multiple>
                    <optgroup label="Clientes">
                        <option>Guilherme Rodrigues</option>
                        <option>Bruno Martins</option>
                        <option>Entre outros...</option>
                    </optgroup>
                    <optgroup label="Parceiros">
                        <option>Google</option>
                        <option>Microsoft</option>
                        <option>Worten</option>
                        <option>Fnac</option>
                        <option>Continente</option>
                    </optgroup>
                    <optgroup label="Deuses">
                        <option>SyncReady</option>
                        <option>Admin. Tíburcio</option>
                        <option>Admin. Bibi</option>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <label for="untilAt">Data de validade do grupo</label>
                <input type="date" class="form-control" name="untilAt" placeholder="Nome da sala">
            </div>
            <button type="submit" class="btn btn-block">Registar</button>
        </form>
    </div>
</div>  
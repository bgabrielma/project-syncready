<div class="container-fluid p-4">
  <div class="table-responsive-lg">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>UUID</th>
        <th>Identificador da sala</th>
        <th>Nome da sala</th>
        <th>Data de criação</th>
        <th>Data de última atualização</th>
        <th>Data de validade</th>
        <th>Descrição</th>
        <th>Ficheiro pdf</th>
        <th>Status da sala</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody>
        <% data.forEach(elem => { %>
        <tr>
          <th scope="row"><%- elem.uuid_room %></th>
          <td><%- elem.room_code %></td>
          <td><%- elem.name_room %></td>
          <td><%- elem.created_at %></td>
          <td><%- elem.updated_at %></td>
          <td><%- elem.until_at %></td>
          <td><%- elem.description %></td>
          <td>
            <a class="btn btn-light" href="/public/files/<%- elem.designation %>" download>
              <i class="fas fa-download"></i>Descarregar ficheiro
            </a>
          </td>
          <td><%- elem.ticket_option_designation %></td>
          <td>
            <button class="btn btn-light" name="listButtonEdit" data-userValue="<%- elem.uuid_room -%>" data-toggle="tooltip" 
            data-placement="bottom" title="Editar">
                <i class="fas fa-edit"></i>
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>


<script>
  $(function() {
    
    $(document).on('click', 'button[name="listButtonEdit"]', function() {
      const btn = $(this)
      const uuid = btn.attr('data-userValue')
      
      // prepare dialog
      const editModal = $(document).find('#modalEditDialog')

      // set secret uuid key
      $(document).find('#modalEditDialogSecret').val(uuid)

      // load data
      const form = editModal.find('form')

      console.log( $(document).find('#modalEditDialogSecret').val())
    })
  })
</script>

<!-- Modals  -->

<!-- Edit dialog  -->

<div class="modal fade" id="modalEditDialog" tabindex="-1" role="dialog" aria-labelledby="modalEditDialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edição de dados</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="background-color: #F8F9FA">
        <form method="POST" action="">
          <input type="hidden" name="secretUUIDToUpdate" id="modalEditDialogSecret" value="secret">
          <div class="form-group col-12">
              <label for="type">Tipo de utilizador</label>
              <select name="type" class="custom-select">
              </select>
          </div>
          <div class="form-group col-lg-12">
            <label class="" for="exampleInputName1">Nome completo</label>
            <input
                value=""
                type="text" 
                name="fullname"
                class="form-control" 
                aria-describedby="emailHelp" 
                placeholder="Nome completo" required>
          </div>
          <div class="form-group col-lg-12">
            <label class="" for="exampleInputName1">Local de residência</label>
            <input
                value=""
                type="text" 
                name="address"
                class="form-control" 
                aria-describedby="emailHelp" 
                placeholder="Localidade" required>
          </div>
          <div class="form-group col-lg-12">
            <label for="exampleInputEmail1">E-mail</label>
            <input 
                value=""
                type="email" 
                class="form-control" 
                name="email" 
                placeholder="E-mail" required>
          </div>
          <div class="form-group col-lg-9">
            <label for="exampleInputTel1">Telemóvel</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <select id="disabledSelect" class="form-control input-group-text">
                  <option>+351</option>
                </select>
              </div>
              <input
                  value="" 
                  type="tel" 
                  class="form-control" 
                  name="contacto" 
                  placeholder="Telemóvel" required>
            </div> 
          </div>
          <div class="form-group col-lg-12">
            <label for="exampleInputCC1">Cartão de cidadão</label>
            <input 
                value="" 
                type="text" 
                class="form-control" 
                name="cc" 
                placeholder="Cartão de cidadão" required>
          </div>
          <div class="form-group col-lg-12">
            <label for="exampleInputPassword1">Redefinir palavra-passe</label>
            <input 
                type="password" 
                class="form-control" 
                name="password" 
                placeholder="Palavra-passe">
          </div>
        </form>
      </div>
      <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="modalEditBtnConf" class="btn text-white" style="background-color: #E4D530">Confirmar operação</button>
      </div>
    </div>
  </div>
</div>
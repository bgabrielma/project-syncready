<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:background="@color/colorBackground"
        android:id="@+id/ScrollViewAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <ImageView
                    android:tint="@color/colorEditNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="User image"
                    android:src="@drawable/ic_subscriptions" />

                <TextView
                    android:id="@+id/txtNCompletoAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/FullName"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"
                    />

                <TextView
                    android:id="@+id/txtNomeAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nomedodred"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/txtNomeUtilizadorAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/User_name"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/txtUNameAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/userdodred"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/txtCCAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NumCC"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/txtNumCCAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NCC"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/txtCriacaoAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dtCriacao"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/txtdataCriacaoAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dataC"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</layout>
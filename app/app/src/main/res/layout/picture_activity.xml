<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ortiz.touchview.TouchImageView
            android:id="@+id/touchImageFileView"
            android:background="@color/colorBlack"
            android:src="@drawable/splashscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:background="#2D000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/toolbar_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:id="@+id/toolbarBack"
                            android:tint="@color/colorWhite"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_keyboard_backspace" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginEnd="5dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="25dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/colorPrimaryLight">
                            <ImageView
                                android:id="@+id/groupImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/default_user_image"
                                android:scaleType="centerCrop" />
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:id="@+id/linearDetailsZone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/toolbarGroupTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginTop="10dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="Asus - Placa GrÃ¡fica - Hugo"
                            android:textColor="@color/colorWhite"
                            />

                        <TextView
                            android:id="@+id/toolbarGroupUsersFormatted"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite"
                            />

                    </LinearLayout>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
</layout>
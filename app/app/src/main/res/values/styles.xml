<resources>
    <!-- Base application theme. -->
    <style name="MainApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLightSaturate</item>
        <item name="colorAccent">@color/colorPrimaryLightSaturate</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLightSaturate</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="Toolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#B1A12B</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryLightSaturate</item>
        <item name="boxStrokeWidth">0.6dp</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>
</resources>

